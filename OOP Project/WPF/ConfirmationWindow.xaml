<Window x:Class="WPF.Confirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="Confirmation" Height="225" Width="361" KeyDown="Window_KeyDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="283*"/>
            <ColumnDefinition Width="117*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lbMessage" Content="Do you really want to quit?" HorizontalAlignment="Left" Margin="90,46,0,0" VerticalAlignment="Top" Width="220" RenderTransformOrigin="0.5,0.445" Grid.ColumnSpan="2"/>
        <Button x:Name="btnOk" Content="Yes" HorizontalAlignment="Left" Margin="52,122,0,0" VerticalAlignment="Top" Height="35" Width="76" Click="btnOk_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="232,122,0,0" VerticalAlignment="Top" Height="35" Width="76" Grid.ColumnSpan="2" Click="btnCancel_Click"/>

    </Grid>
</Window>
